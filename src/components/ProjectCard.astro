---
const { title, description, technologies, image, url, github } = Astro.props;
---

<article class="flex w-full flex-col md:flex-row md:gap-4">
  <div
    class="flex-2 flex items-center overflow-hidden py-6 md:rounded-lg md:py-0"
  >
    <img
      src={image}
      alt={title}
      loading="lazy"
      class="w-full select-none transition-transform duration-200 hover:scale-105 md:rounded-lg"
      draggable="false"
    />
  </div>
  <div class="flex flex-1 flex-col justify-around">
    <div>
      <h3 class="mt-4 text-2xl font-bold">{title}</h3>
      <p class="mt-4 text-pretty font-medium text-white/80">{description}</p>
      <div class="mt-4 flex w-full flex-wrap gap-4">
        {
          technologies.map((tech: any) => (
            <div class="flex items-center gap-1.5">
              <tech.icon class="size-6" />
              <p class="text-sm font-medium">{tech.name}</p>
            </div>
          ))
        }
      </div>
    </div>
    <footer class="mt-8 flex flex-col gap-4 px-4 md:flex-row">
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-secondary hover:bg-dark-rose w-full rounded-lg p-2 text-center font-medium transition-all duration-100 active:scale-90"
        >Visitar Sitio</a
      >
      <a
        href={github}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-secondary hover:bg-dark-rose w-full rounded-lg p-2 text-center font-medium transition-all duration-100 active:scale-90"
        >Ver CÃ³digo</a
      >
    </footer>
  </div>
</article>
