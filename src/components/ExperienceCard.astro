---
const { title, company, time, description } = Astro.props;
---

<article class="w-full rounded-2xl px-6 py-8 md:p-8">
  <header>
    <h3 class="text-2xl font-bold">{title}</h3>
    <p class="text-secondary mt-2 text-xl font-semibold">{company}</p>
    <div
      class="mt-4 w-fit rounded-full bg-[#ffe4ec] px-4 py-1 text-sm font-semibold text-neutral-900"
    >
      {time}
    </div>
  </header>
  <p class="mt-8 text-pretty font-medium">{description}</p>
</article>

<style>
  article {
    box-shadow: -2px 10px 20px 5px #0e0e0e;
  }
</style>
